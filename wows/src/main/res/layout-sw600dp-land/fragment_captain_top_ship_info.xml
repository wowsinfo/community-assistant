<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!-- BATTERY STATS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/kills_by_armament_type"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1.0">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/captain_details_battery_kills_main_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_turret" />

                        <TextView
                            android:id="@+id/captain_details_battery_kills_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/captain_details_battery_kills_torps_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_torps" />

                        <TextView
                            android:id="@+id/captain_details_battery_kills_torps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/captain_details_battery_kills_aircraft_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_aircraft" />

                        <TextView
                            android:id="@+id/captain_details_battery_kills_aircraft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/captain_details_battery_kills_other_iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_destroyed_other" />

                        <TextView
                            android:id="@+id/captain_details_battery_kills_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- TOP SCORES -->
            <include layout="@layout/snippet_captain_top_ship_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="0.48"
                    android:orientation="vertical">
                    <!-- Main Battery-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/captain_details_main_battery_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_battery"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/white_transparent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/destroyed_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_main_destroyed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/hit_percentage_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_main_hit_ratio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/shots_fired_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_main_shots"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/captain_details_main_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:text="@string/best_ship_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <ImageView
                                        android:id="@+id/captain_details_main_ship_icon"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:minHeight="120dp"
                                        android:scaleType="fitCenter" />

                                    <TextView
                                        android:id="@+id/captain_details_main_ship_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_main_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_main_ship_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_main_ship_icon"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Torpedoes-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/captain_details_torps_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/torpedoes"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/white_transparent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/destroyed_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_torps_destroyed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/hit_percentage_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_torps_hit_ratio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/shots_fired_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_torps_shots"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />
                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/captain_details_torps_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:text="@string/best_ship_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <ImageView
                                        android:id="@+id/captain_details_torps_ship_icon"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:minHeight="120dp"
                                        android:scaleType="fitCenter" />

                                    <TextView
                                        android:id="@+id/captain_details_torps_ship_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_torps_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_torps_ship_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_torps_ship_icon"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.04"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="0.48"
                    android:orientation="vertical">
                    <!-- Aircraft-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/captain_details_aircraft_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/encyclopedia_aircraft"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/white_transparent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/destroyed_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_aircraft_destroyed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/hit_percentage_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_aircraft_hit_ratio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/shots_fired_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_aircraft_shots"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/captain_details_aircraft_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:text="@string/best_ship_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <ImageView
                                        android:id="@+id/captain_details_aircraft_ship_icon"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:minHeight="120dp"
                                        android:scaleType="fitCenter" />

                                    <TextView
                                        android:id="@+id/captain_details_aircraft_ship_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_aircraft_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_aircraft_ship_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_aircraft_ship_icon"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Secondaries-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/captain_details_secondary_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/secondary_battery"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/white_transparent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/destroyed_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_secondary_destroyed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/hit_percentage_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_secondary_hit_ratio"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="@string/shots_fired_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_secondary_shots"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/captain_details_secondary_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:text="@string/best_ship_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <ImageView
                                        android:id="@+id/captain_details_secondary_ship_icon"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:minHeight="120dp"
                                        android:scaleType="fitCenter" />

                                    <TextView
                                        android:id="@+id/captain_details_secondary_ship_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_secondary_ship_icon"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_secondary_ship_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/captain_details_secondary_ship_icon"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />

                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ramming-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/captain_details_ramming_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ramming"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/white_transparent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1.0">

                                <LinearLayout
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/destroyed_c"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/captain_details_ramming_destroyed"
