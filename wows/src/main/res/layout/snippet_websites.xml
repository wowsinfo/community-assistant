<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resources_website_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:showIn="@layout/activity_resources">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/resources_website_ship_comrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/resources_website_ship_comrade_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resources_website_ap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resources_website_ship_comrade"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/resources_website_ap_icon"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resources_website_wowsreplays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resources_website_ap"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/resources_website_wowsreplays_icon"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resources_website_drmb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resources_website_wowsreplays"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/resources_website_drmb_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/resources_website_drmb"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:weightSum="1.0">

            <androidx.cardview.widget.CardView
                android:id="@+id/resources_website_wows"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:clickable="true">

                <ImageView
                    android:id="@+id/resources_website_website_icon"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="0dip"
                android:layout_height="1dp"
                android:layout_weight="0.02" />

            <androidx.cardview.widget.CardView
                android:id="@+id/resources_website_reddit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:clickable="true">

                <ImageView
                    android:id="@+id/resources_website_reddit_icon"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
</ScrollView>